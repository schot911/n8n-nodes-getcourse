{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**", "dist/**"]
} 